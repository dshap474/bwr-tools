{
  "name": "bwr-tools",
  "version": "0.0.0",
  "private": true,
  "description": "TypeScript-based plotting tools with exact BWR visual standards",
  "license": "MIT",
  "author": "Blockworks Research",
  "type": "module",
  "scripts": {
    "dev": "next dev -p 4000",
    "dev:all": "turbo run dev --parallel",
    "build": "next build",
    "build:all": "turbo run build",
    "start": "next start",
    "test": "turbo run test",
    "test:visual": "turbo run test:visual",
    "lint": "next lint",
    "lint:all": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "clean": "rm -rf .next && turbo run clean && rm -rf node_modules",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build lint test && changeset publish"
  },
  "dependencies": {
    "@hello-pangea/dnd": "^18.0.1",
    "@next/env": "^15.4.1",
    "caniuse-lite": "^1.0.30001727",
    "clsx": "^2.1.1",
    "next": "14.1.0",
    "papaparse": "^5.4.1",
    "plotly.js-dist-min": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xlsx": "^0.18.5",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@next/eslint-plugin-next": "14.1.0",
    "@playwright/test": "^1.54.1",
    "@types/node": "^20.11.5",
    "@types/papaparse": "^5.3.14",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "tailwindcss": "^3.4.1",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
